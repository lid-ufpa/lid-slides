% Define author variables
\newcommand{\authorone}[1]{\def\authoronecontent{#1}}
\newcommand{\authortwo}[1]{\def\authortwocontent{#1}}
\newcommand{\authorthree}[1]{\def\authorthreecontent{#1}}
\newcommand{\authorfour}[1]{\def\authorfourcontent{#1}}
\newcommand{\authorfive}[1]{\def\authorfivecontent{#1}}

\def\authoronecontent{}
